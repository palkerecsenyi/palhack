{

  "manifest_version": 2,
  "name": "Parolarapenn",
  "version": "0.0.1",

  "description": "Cool stuff yeah",

  "icons": {
    "48": "icons/border-48.png"
  },

  "content_scripts": [
    {
      "matches": ["*://www.amazon.com/*", "*://www.amazon.co.uk/*"],
      "js": ["amazon.js"]
    }
  ],

  "page_action": {
    "browser_style": true,
    "default_icon": {
      "19": "button/geo-19.png",
      "38": "button/geo-38.png"
    },
    "default_title": "Basket emissions",
    "default_popup": "popup.html"
  }

}
